<%- include("partials/header") %>
<div class="table-container">
    <h2 class="todo-title">TODO LIST</h2>
    <div>
        <a class="btn" href="/add-todo">Add todo</a>
    </div>
    <br/>
    <table>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Created on</th>
            <th>Updated at</th>
            <th>Action</th>
        </tr>
        <% todos.forEach(todo => { %>
            <tr>
                <td><%= todo.title %></td>
                <td><%= todo.description %></td>
                <td><%= todo.createdAt.toDateString() %></td>
                <td><%= todo.updatedAt.toDateString() %></td>
                <td>
                    <a class="btn" href="/update-todo?id=<%= todo._id %>">Edit</a>
                    <a class="btn" href="/delete-todo?id=<%= todo._id %>">Delete</a>
                </td>
            </tr>
        <% }) %>
        
    </table>
</div>
</body>
</html>
